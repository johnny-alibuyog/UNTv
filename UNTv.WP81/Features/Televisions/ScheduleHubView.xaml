            <!-- monday programs-->
            <PivotItem x:Name="MondayProgramsPivotItem" Header="monday">
                <ListView Grid.Row="1" x:Name="MondayProgramsListView"
                        SelectionMode="Single"
                        IsItemClickEnabled="True"
                        ContinuumNavigationTransitionInfo.ExitElementContainer="True" 
                        ScrollViewer.VerticalScrollMode="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <controls:PhotoSizeMediumView />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>

            <!-- tuesday programs -->
            <PivotItem x:Name="TuesdayProgramsPivotItem" Header="tuesday">
