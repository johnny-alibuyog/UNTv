                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <controls:PhotoSizeMediumView />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>

            <!-- thursday programs -->
            <PivotItem x:Name="ThursdayProgramsPivotItem" Header="thursday">
